<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bulma/0.7.4/css/bulma.min.css" />
    <title>Album Duzenleme</title>
  </head>
  <body style="padding:50px 0">
    <form id="myForm" class="container" method="POST" action="/album_post">
      <h2 class="title">Albüm Ekleme</h2>

      <div class="field is-horizontal">
        <div class="field-label is-normal">
          <label class="label has-text-weight-normal">Album Adi</label>
        </div>
        <div class="field-body">
          <div class="field">
            <div class="control">
              <input class="input" type="text" name="albumAdi" id="albumAdi" />
            </div>
          </div>
        </div>
      </div>

      <div class="field is-horizontal">
        <div class="field-label is-normal">
          <label class="label has-text-weight-normal">Cikis Tarihi</label>
        </div>
        <div class="field-body">
          <div class="field">
            <div class="control">
              <input class="input" type="date" name="cikisTarihi" id="cikisTarihi" />
            </div>
          </div>
        </div>
      </div>

      <div class="field is-horizontal">
        <div class="field-label is-normal">
          <label class="label has-text-weight-normal">Sanatci Id</label>
        </div>
        <div class="field-body">
          <div class="field">
            <div class="select">
              <select name="sanatciId" id="sanatciIdSelect">
                <% veri1[0].forEach(function(p){ %>
                <option value="<%= p.SanatciId %>">
                  <%= p.SanatciId %> - <%= p.SanatciAdi %>
                </option>
                <% }); %>
              </select>
            </div>
          </div>
        </div>
      </div>

      <div class="field is-horizontal">
        <div class="field-label is-normal">
          <label class="label has-text-weight-normal">Muzik Tur Id</label>
        </div>
        <div class="field-body">
          <div class="field">
            <div class="select">
              <select name="muzikTurId" id="muzikTurIdSelect">
                <% veri1[1].forEach(function(p){ %>
                <option value="<%= p.MuzikTurId %>">
                  <%= p.MuzikTurId %> - <%= p.MuzikTur %>
                </option>
                <% }); %>
              </select>
            </div>
          </div>
        </div>
      </div>

      <div class="field is-horizontal">
        <div class="field-label">
          <!-- Left empty for spacing -->
        </div>
        <div class="field-body">
          <div class="field">
            <div class="control">
              <button type="submit" class="button is-primary">
                Değişiklikleri Kaydet
              </button>
              <a href="/liste" class="button">
                Çıkış
              </a>
            </div>
          </div>
        </div>
      </div>
    </form>

    <script src="app.js"></script>
  </body>
</html>
