<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bulma/0.7.4/css/bulma.min.css" />
    <title>Sanatci Ekleme</title>
  </head>
  <body style="padding:50px 0;">

   <form class="container" method="POST" action="/sanatci_post">
    <h2 class="title">Sanatçı Ekleme</h2>

    <div class="field is-horizontal">
      <div class="field-label is-normal">
        <label class="label has-text-weight-normal">Sanatci Adi</label>
      </div>
      <div class="field-body">
        <div class="field">
          <div class="control">
            <input class="input" type="text" name="sanatciAdi" />
          </div>
        </div>
      </div>
    </div>

    <div class="field is-horizontal">
      <div class="field-label is-normal">
        <label class="label has-text-weight-normal">Sanatci Yasiyor mu</label>
      </div>
      <div class="field-body">
        <div class="field">
          <div class="control">
            <label>
              <input type="radio" value="1" name="sanatciYasiyormu" /> Evet
          </label>
          <label>
              <input type="radio" value="0" name="sanatciYasiyormu" /> Hayır
          </label>
          </div>
        </div>
      </div>
    </div>

    <div class="field is-horizontal">
      <div class="field-label is-normal">
        <label class="label has-text-weight-normal">Sanatci Dogum Tarihi</label>
      </div>
      <div class="field-body">
        <div class="field">
          <div class="control">
            <input class="input" type="text" placeholder="2000" name="sanatciDogumTarihi" />
          </div>
        </div>
      </div>
    </div>

    <!-- <div class="field is-horizontal">
      <div class="field-label is-normal">
        <label class="label has-text-weight-normal">Eklenme Tarihi</label>
      </div>
      <div class="field-body">
        <div class="field">
          <div class="control">
            <input class="input" type="text" name="eklenmeTarihi" />
          </div>
        </div>
      </div>
    </div> -->

    <div class="field is-horizontal">
        <div class="field-label">
          <!-- Left empty for spacing -->
        </div>
        <div class="field-body">
          <div class="field">
            <div class="control">
              <button type="submit" class="button is-primary">
                Değişiklikleri Kaydet
              </button>
              <a href="/liste" class="button">
                Çıkış
              </a>
            </div>
          </div>
        </div>
      </div>
    </form>
  </div>

  <script src="app.js"></script>
  </body>
</html>
